{
	"name": "@env-architect/vscode-extension",
	"displayName": "EnvArchitect",
	"description": "Language support for EnvArchitect (env.toml, env.json)",
	"version": "0.1.0",
	"publisher": "env-architect",
	"author": "athexweb3 <athexweb3@gmail.com>",
	"engines": {
		"vscode": "^1.85.0"
	},
	"categories": [
		"Programming Languages"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "env-toml",
				"aliases": [
					"EnvArchitect Manifest",
					"env-toml"
				],
				"filenames": [
					"env.toml",
					"plugin.toml"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"commands": [
			{
				"command": "env-architect.restartServer",
				"title": "EnvArchitect: Restart Language Server"
			}
		],
		"jsonValidation": [
			{
				"fileMatch": "env.json",
				"url": "./schemas/env-schema.json"
			}
		]
	},
	"activationEvents": [
		"workspaceContains:**/env.toml",
		"workspaceContains:**/env.json"
	],
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/vscode": "^1.85.0",
		"@types/node": "^18.0.0",
		"typescript": "^5.3.0"
	},
	"dependencies": {
		"vscode-languageclient": "^9.0.0"
	}
}
