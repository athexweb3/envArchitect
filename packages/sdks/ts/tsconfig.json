{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"baseUrl": ".",
		"outDir": "./dist",
		"rootDir": ".",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"paths": {
			"env-architect:plugin/host": [
				"./src/bindings/interfaces/env-architect-plugin-host.d.ts"
			],
			"@bindings/*": ["./src/bindings/*"],
			"@api/*": ["./src/api/*"]
		}
	},
	"include": ["src/**/*", "scripts/**/*"],
	"exclude": ["node_modules", "dist"]
}
